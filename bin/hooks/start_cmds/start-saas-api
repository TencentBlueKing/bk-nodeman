#!/bin/bash

if [ -z "$GUNICORN_TIMEOUT" ]; then
    GUNICORN_TIMEOUT=30
fi

if [ -z "$GUNICORN_WORKER_NUM" ]; then
    GUNICORN_WORKER_NUM=2
fi

if [ -z "$GUNICORN_THREAD_NUM" ]; then
    GUNICORN_THREAD_NUM=4
fi

gunicorn --timeout $GUNICORN_TIMEOUT -w $GUNICORN_WORKER_NUM -b "[::]:${SAAS_API_PORT}" -k gthread --threads $GUNICORN_THREAD_NUM wsgi:application --max-requests=10000 --max-requests-jitter 1000 --access-logfile - --error-logfile - --access-logformat '[%(h)s] %({request_id}i)s %(u)s %(t)s "%(r)s" %(s)s %(D)s %(b)s "%(f)s" "%(a)s"'
